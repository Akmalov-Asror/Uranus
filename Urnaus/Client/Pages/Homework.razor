        .footer__item a {
            cursor: pointer;
            color: #949393;
        }

        .social__logo {
            cursor: pointer;
        }

        .header__logo img {
            width: 42px;
            height: 42px;
        }

        .header__logo {
            display: flex;
            align-items: center;
            margin-right: auto;
            cursor: pointer;
        }

        .contact__bg {
            background-image: url(https://t3.ftcdn.net/jpg/01/90/68/76/240_F_190687625_tKPXD6c6wN4v3VDyZQIn3Mor0Ia6pVbZ.jpg);
            background-repeat: no-repeat;
            background-size: cover;
