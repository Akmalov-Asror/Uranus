@page "/aboutus"
@using Urnaus.Shared
@using Task = System.Threading.Tasks.Task
@inject HttpClient Http
@inject NavigationManager NavigationManager

<PageTitle>Uranus</PageTitle>

<head>
    <script src="https://kit.fontawesome.com/82de9758c4.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            list-style: none;
            text-decoration: none;
        }

        ul {
            margin-bottom: 0;
            padding: 0;
        }

        a {
            color: #000;
            text-decoration: none;
            cursor: pointer;
        }

        header {
            background-color: #fff;
        }

        .container-s {
            max-width: 1200px;
            margin: 0 auto;
        }

        .header__container {
            padding: 14px 0;
            display: flex;
            align-items: center;
        }

            .header__container img {
                margin: 0 auto;
            }

        .header__list {
            display: flex;
            gap: 30px;
        }

        .header__auth {
            display: flex;
            gap: 20px;
            align-items: center;
            margin-left: auto;
        }

        .auth-registration {
            padding: 10px 34px;
            color: #fff;
            background-color: #35A4D9;
            border-radius: 6px;
        }

        .footer {
            background: #111;
            color: #949393 !important;
        }

        .footer__container {
            display: flex;
            gap: 250px;
            padding-top: 70px;
            padding-bottom: 54px;
        }

        .footer__item {
            display: flex;
            flex-direction: column;
            gap: 18px;
        }

        .footer__logo {
            display: flex;
            align-items: center;
            gap: 10px;
            cursor: pointer;
        }

        .footer__item img {
            width: 42px;
            height: 42px;
            border-radius: 50%;
        }

        .footer h6 {
            color: #fff;
        }

        .footer h1 {
            color: #fff;
        }

        h1 {
            margin: 0;
        }

        p {
            margin: 0;
        }

        .footer__p {
            text-align: center;
            color: #545454;
            font-size: 12px;
            padding-bottom: 24px;
        }

        .social__logo {
            display: flex;
            gap: 20px;
            padding-top: 30px;
        }

        .footer__item a {
            cursor: pointer;
            color: #949393;
        }

        .social__logo {
            cursor: pointer;
        }

        .header__logo img {
            width: 42px;
            height: 42px;
        }

        .header__logo {
            display: flex;
            align-items: center;
            margin-right: auto;
            cursor: pointer;
        }

        .contact__bg {
            background-image: url(https://t3.ftcdn.net/jpg/01/90/68/76/240_F_190687625_tKPXD6c6wN4v3VDyZQIn3Mor0Ia6pVbZ.jpg);
            background-repeat: no-repeat;
            background-size: cover;
            background-position: center;
            height: 300px;
        }


        .aboutus__info {
            display: flex;
            gap: 30px;
            margin-top: 110px;
            margin-bottom: 130px;
        }

        .aboutus__p {
            display: flex;
            flex-direction: column;
            gap: 16px;
        }

            .aboutus__p p {
                width: 540px;
                font-size: 18px;
                line-height: 26px;
            }

        .row {
            display: flex;
            gap: 30px;
            justify-content: center;
        }

        .col-4 {
            width: 380px;
            display: flex;
            flex-direction: column;
            gap: 10px;
            padding: 0;
            cursor: pointer;
        }

            .col-4 img {
                width: 380px;
            }

            .col-4 h6 {
                color: #113BA1;
                font-size: 24px;
                margin: 0;
            }

            .col-4 p {
                color: #000;
                font-size: 14px;
                padding-bottom: 25px;
            }

        .teacher h1 {
            margin-bottom: 80px;
        }

        .load {
            width: 320px;
            padding: 20px 100px;
            background-color: #35A4D9;
            color: white;
            border-radius: 10px;
            text-align: center;
            cursor: pointer;
            margin-bottom: 130px;
        }

        .partners {
            display: flex;
            justify-content: space-between;
            padding: 33px 0;
        }

        .section__partners {
            margin-bottom: 150px;
        }

        .active {
            color: #113BA1;
        }

    </style>
</head>

<header>
    <div class="container-s">
        <div class="header__container">
            <div class="header__logo" @onclick="ToMain">
                <img src="https://devel.prom.uz/upload/organization_logos/ee/6e/ee6e2d1fa54c427cb384776ce3891061.png" alt="">
                <h1>URANUS</h1>
            </div>
            <ul class="header__list">
                <li>
                    <a @onclick="ToCourses">Все курсы</a>
                </li>
                <li>
                    <a >Мои курсы</a>
                </li>
                <li>
                    <a @onclick="HomeworkPage">Домашние задания</a>
                </li>
                <li>
                    <a @onclick="ToAbout" class="active">О нас</a>
                </li>
                <li>
                    <a @onclick="ToContact">Контакты</a>
                </li>
            </ul>
            <div class="header__auth">
                <a @onclick="ToLogin">Войти</a>
                <a @onclick="ToReg" class="auth-registration">Регистрация</a>
            </div>
        </div>
    </div>
</header>
<section class="contact__bg">
</section>
<section>
    <div class="container-s aboutus__info">
        <img src="https://t3.ftcdn.net/jpg/00/83/92/82/360_F_83928200_mYGZqB0ozTtSS6J5EtW9834mjb5tLW6x.jpg" alt="">
        <div class="aboutus__p">
            <p>
                Lorem ipsum dolor sit amet, consectetur adipiscing elit.
                Vestibulum tempor arcu libero. Nam aliquet et nisi id congue.
                Praesent accumsan scelerisque nulla. Mauris semper erat id lectus consequat elementum.
                Donec bibendum augue tincidunt nibh placerat, vel pellentesque dui fermentum.
            </p>
            <p>
                Maecenas nec nibh vitae ligula viverra maximus. Phasellus commodo convallis neque,
                eu aliquet ante cursus id. Praesent suscipit sodales aliquet. Vestibulum tristique
                nulla sed purus interdum, ut dapibus odio finibus. Suspendisse potenti. Sed semper
                elit in arcu mollis euismod in eget magna. In libero diam, egestas rutrum odio quis,
                tempus faucibus sem. Aenean cursus luctus erat sit amet fermentum. Etiam eleifend augue mi,
                ac suscipit est convallis eu. Vivamus et felis a tortor viverra vestibulum a id enim.
            </p>
        </div>
    </div>
</section>
<section>
    <div class="container-s teacher">
        <h1>Наши преподаватели</h1>
        <div class="row">
            @if (teachers.Count <= 0)
            {
                <h1>No teachers...</h1>
            }
            else
            {
                @foreach (var teachers in teachers.Take(displayCount))
                {
                    <div class="col-4">
                        <img src="@teachers.ImageUrl" alt="@teachers.Name">
                        <h6>@teachers.Name</h6>
                        <p>@teachers.Type</p>
                    </div>
                }
            }
            @if (displayCount < teachers.Count)
            {
                <a @onclick="LoadMore" class="load">Загрузить еще</a>
            }

        </div>
    </div>
</section>
<section class="section__partners">
    <hr>
    <div class="container-s partners">
        <p>Партнеры</p>
        <p>Партнеры</p>
        <p>Партнеры</p>
        <p>Партнеры</p>
        <p>Партнеры</p>
        <p>Партнеры</p>
        <p>Партнеры</p>
        <p>Партнеры</p>
    </div>
    <hr>
</section>
<footer class="footer">
    <div class="container-s">
        <div class="footer__container">
            <div class="footer__item">
                <div class="footer__logo" @onclick="ToMain">
                    <img src="https://devel.prom.uz/upload/organization_logos/ee/6e/ee6e2d1fa54c427cb384776ce3891061.png" alt="">
                    <h1>URANUS</h1>
                </div>
                <div class="social__logo">
                    <i class="fa-brands fa-facebook fa-2xl"></i>
                    <i class="fa-brands fa-instagram fa-2xl"></i>
                    <i class="fa-brands fa-telegram fa-2xl"></i>
                </div>
            </div>
            <div class="footer__item">
                <h6>ИНФОРМАЦИЯ</h6>
                <a>Все курсы</a>
                <a>Результаты учеников</a>
                <a>О компании</a>
            </div>
            <div class="footer__item">
                <h6>КОНТАКТЫ</h6>
                <p>+998 98 369 90 69</p>
                <p>info@uranusinvest.com</p>
                <p>Location</p>
            </div>
        </div>
        <p class="footer__p">
            ©
            2021 Uranus Invest
        </p>
    </div>
</footer>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>

@code {
    List<Teacher> teachers = new List<Teacher>();

    protected override async Task OnInitializedAsync()
    {
        var result = await Http.GetFromJsonAsync<List<Teacher>>("api/Teacher");
        if (result != null)
        {
            teachers = result;
        }
    }

    private int displayCount = 15;

    private void LoadMore()
    {
        displayCount += 6;
    }

    void ToCourses()
    {
        NavigationManager.NavigateTo("/allcourses");
    }

    void ToContact()
    {
        NavigationManager.NavigateTo("/contact");
    }

    void ToLogin()
    {
        NavigationManager.NavigateTo("/login");
    }

    void ToReg()
    {
        NavigationManager.NavigateTo("/registration");
    }

    void ToMain()
    {
        NavigationManager.NavigateTo("/");
    }
    void ToAbout()
    {
        NavigationManager.NavigateTo("/aboutus");
    }

    void HomeworkPage()
    {
        NavigationManager.NavigateTo("/homework");
    }

}
