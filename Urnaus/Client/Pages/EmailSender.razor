@page "/password"
@using Urnaus.Client.Dto_s
@inject NavigationManager NavigationManager
@inject HttpClient Http
<head>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            list-style: none;
            text-decoration: none !important;
        }

        p {
            margin: 0;
        }

        header {
            box-shadow: 0px 10px 40px 0px rgba(61, 174, 223, 0.10);
            padding: 20px 0;
        }

        .container-s {
            max-width: 620px;
            margin: 0 auto;
        }

        .logo {
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .logo img {
                width: 42px;
                height: 42px;
            }

        .registration {
            margin-top: 60px;
            margin-bottom: 60px;
        }

        .registration__container {
            border: 1px solid #DFDFDF;
        }

        .auth {
            display: flex;
        }

            .auth a {
                width: 50%;
                text-align: center;
                padding: 19px 59px;
                font-size: 18px;
                color: #404040;
                font-weight: 400;
            }

        .auth--active {
            color: #000 !important;
            font-weight: 700 !important;
        }

        .auth--not {
            background-color: #f9f9f9;
            border-left: 1px solid #DFDFDF;
            border-bottom: 1px solid #DFDFDF;
        }

        .registration__fields {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 20px;
        }

            .registration__fields h1 {
                margin-top: 50px;
                margin-bottom: 20px;
                font-size: 28px;
            }

            .registration__fields p {
                font-size: 18px;
                width: 460px;
                line-height: 21px;
            }

            .registration__fields input {
                width: 460px;
                padding: 17px 30px;
                border-radius: 8px;
                border: 1px solid #000;
                opacity: 0.4;
            }

        .login {
            padding: 14px 77px;
            background-color: #35A4D9;
            color: #fff;
            border-radius: 10px;
            margin-top: 20px;
            margin-bottom: 80px;
        }

        input:focus {
            outline: none;
        }
    </style>
</head>

<header>
    <div class="logo">
        <img src="https://devel.prom.uz/upload/organization_logos/ee/6e/ee6e2d1fa54c427cb384776ce3891061.png" alt="">
        <h1>URANUS</h1>
    </div>
</header>

<section class="registration">
    <div class="container-s registration__container">
        <div class="registration__fields ">
            <h1>Сброс пароля</h1>
            <p>Введите свой адрес почты для восстановления пароля</p>
            <p>Инструкции по сбросу пароля будут отправлены на ваш адрес электронной почты</p>
            <input type="email" placeholder="Email" @bind="email.Email">
            <button class="login" @onclick="OnValidSubmit">Отправить</button>
        </div>
    </div>
</section>

@code {
    private EmailSendDto email = new EmailSendDto();

    async Task OnValidSubmit()
    {
        var response = await Http.PostAsJsonAsync("/api/EmailSender", email);
    }
}